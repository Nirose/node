            ]

        },
        "32bit":{
            "url":[
                "https://github.com/lite-xl/lite-xl/releases/download/v2.0.1/lite-xl-win-x86.zip",
                "https://raw.githubusercontent.com/lukesampson/scoop-extras/master/scripts/vscode-install-context.reg#/lite-xl-install-context.reg",
                "https://raw.githubusercontent.com/lukesampson/scoop-extras/master/scripts/vscode-uninstall-context.reg#/lite-xl-uninstall-context.reg"
